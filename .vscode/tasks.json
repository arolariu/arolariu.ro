{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Dev Website",
      "type": "shell",
      "command": "npm run dev:website",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "ready -",
          "endsPattern": "started server on"
        }
      }
    },
    {
      "label": "Launch API",
      "type": "shell",
      "command": "npm run dev:api",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Now listening on",
          "endsPattern": "Application started"
        }
      }
    },
    {
      "label": "Launch Storybook for components",
      "type": "shell",
      "command": "npm --workspace @arolariu/components run storybook",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Storybook",
          "endsPattern": "on (?:http|https)://"
        }
      }
    },
    {
      "label": "Launch Storybook for website",
      "type": "shell",
      "command": "npx storybook dev -p 7007 -c sites/arolariu.ro/.storybook || npm --workspace @arolariu/website run storybook",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Storybook",
          "endsPattern": "on (?:http|https)://"
        }
      }
    },
    {
      "label": "Launch DocFX site",
      "type": "shell",
      "command": "docfx build sites/docs.arolariu.ro/docfx.json && docfx serve sites/docs.arolariu.ro/_site -p 8080",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Building",
          "endsPattern": "Serving .* at http://localhost:8080"
        }
      }
    },
    {
      "label": "Checks: Hygiene Run",
      "type": "shell",
      "command": "npm run format && npm run lint",
      "problemMatcher": []
    }
  ]
}
