{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.scrollback": 10000,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).test.ts, $(capture).test.tsx, $(capture).stories.tsx, $(capture).spec.tsx",
    "*.tsx": "$(capture).test.ts, $(capture).test.tsx, $(capture).stories.tsx, $(capture).spec.tsx"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.autoClosingTags": true,
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.nodePath": "node",
  "i18n-ally.localesPaths": [
    "sites/arolariu.ro/messages",
    "sites/arolariu.ro/src/i18n"
  ],
  "i18n-ally.keystyle": "nested",
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.{ts,tsx}": "${dirname} - RSC - page",
    "**/app/**/island.{ts,tsx}": "${dirname} - RCC - island",
    "**/app/**/layout.{ts,tsx}": "${dirname} - layout",
    "**/app/**/route.{ts,tsx}": "${dirname} - route"
  }
}
