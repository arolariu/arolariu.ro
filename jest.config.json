{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/scripts/tests/**/*.test.ts"
  ],
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/tests/"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testTimeout": 10000
}
