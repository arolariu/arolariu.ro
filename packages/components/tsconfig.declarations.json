{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "outDir": "./dist/types",
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  // We don't want to generate declarations for the entry file
  "exclude": ["src/index.ts"]
}
