{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist/",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "removeComments": false,
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2020",
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.{test,stories}.{ts,tsx}"
  ],
  "include": [
    "src"
  ]
}
