{
  "name": "@arolariu/components",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/components"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No dev target configured for @arolariu/components (storybook script not present). Use components:build instead.'",
        "cwd": "packages/components"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test",
        "cwd": "packages/components"
      },
      "configurations": {
        "unit": {
          "command": "npm run test:unit"
        }
      }
    }
  },
  "tags": [
    "domain:frontend",
    "scope:components",
    "type:lib"
  ]
}
