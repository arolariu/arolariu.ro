{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "sites",
    "libsDir": "packages"
  },
  "defaultBase": "main",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/package-lock.json",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/eslint.config.ts",
      "{workspaceRoot}/prettier.config.ts",
      "{workspaceRoot}/vitest.config.ts",
      "{workspaceRoot}/vitest.setup.ts",
      "{workspaceRoot}/arolariu.sln",
      "{workspaceRoot}/arolariu.slnx",
      "{workspaceRoot}/scripts/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production"
      ],
      "cache": true
    },
    "test": {
      "inputs": [
        "default"
      ],
      "cache": true
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    }
  }
}
