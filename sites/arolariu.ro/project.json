{
  "name": "@arolariu/website",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "sourceRoot": "sites/arolariu.ro",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "sites/arolariu.ro"
      },
      "outputs": [
        "{projectRoot}/.next"
      ],
      "dependsOn": [
        "components:build"
      ]
    },
    "build:storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run storybook:build",
        "cwd": "sites/arolariu.ro"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "sites/arolariu.ro"
      },
      "dependsOn": [
        "components:build"
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run start",
        "cwd": "sites/arolariu.ro"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test:vitest",
        "cwd": "sites/arolariu.ro"
      },
      "configurations": {
        "unit": {
          "command": "npm run test:vitest"
        },
        "e2e": {
          "command": "npm run test:e2e"
        },
        "storybook": {
          "command": "npm run test:storybook"
        },
        "all": {
          "command": "npm run test"
        }
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run storybook",
        "cwd": "sites/arolariu.ro"
      }
    }
  },
  "tags": [
    "domain:frontend",
    "scope:website",
    "type:app"
  ]
}
