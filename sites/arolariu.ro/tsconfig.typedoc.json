{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": true
	},
	"include": [
		"src/lib/**/*.ts",
		"src/lib/**/*.tsx",
		"src/types/**/*.ts",
		"src/types/**/*.tsx"
	],
	"exclude": [
		"**/*.d.ts",
		"**/*.spec.*",
		"**/*.test.*",
		"**/*.stories.*",
		"src/app/**",
		"node_modules",
		".next"
	]
}
