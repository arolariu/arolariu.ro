{
  "name": "arolariu.ro",
  "description": "The `arolariu.ro` project consists of a Next.JS web application.",
  "homepage": "https://arolariu.ro",
  "repository": "github:arolariu/arolariu.ro",
  "version": "1.0.0",
  "packageManager": "yarn@4.1.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "NextJS",
    "ReactJS",
    "TailwindCSS"
  ],
  "bugs": {
    "url": "https://github.com/arolariu/arolariu.ro/issues",
    "email": "olariu.alexandru@pm.me"
  },
  "author": {
    "name": "Alexandru-Razvan Olariu",
    "email": "olariu.alexandru@pm.me",
    "url": "https://arolariu.ro"
  },
  "scripts": {
    "clean": "npm run clean:win && npm run clean:lin",
    "clean:win": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist .next rmdir /Q /S .next",
    "clean:lin": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf .next",
    "dev": "next dev --turbo",
    "email": "email dev",
    "build": "paraglide-js compile --project i18n.inlang --outdir src/i18n && next build",
    "format": "npm run format:check; npm run format:fix",
    "format:check": "prettier --check . --config prettier.config.js --config-precedence prefer-file --cache --cache-strategy metadata",
    "format:fix": "prettier --write . --config prettier.config.js --config-precedence prefer-file --cache --cache-strategy metadata",
    "start": "next start",
    "lint": "eslint src/",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@azure/app-configuration": "1.6.0",
    "@azure/identity": "4.1.0",
    "@azure/storage-blob": "12.17.0",
    "@clerk/nextjs": "^5.0.1",
    "@inlang/paraglide-next": "^0.1.0",
    "@radix-ui/react-alert-dialog": "1.0.5",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-switch": "1.0.3",
    "@react-email/components": "0.0.16",
    "@react-email/render": "0.0.12",
    "@serwist/next": "^9.0.0",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.0",
    "jose": "5.2.4",
    "next": "^14.2.2",
    "next-themes": "0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email": "2.1.1",
    "react-icons": "5.0.1",
    "resend": "3.2.0",
    "server-only": "0.0.1",
    "sharp": "0.33.3",
    "tailwind-merge": "2.2.2",
    "tailwindcss-animate": "1.0.7",
    "zustand": "5.0.0-alpha.6"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "6.0.0",
