{
  "name": "@arolariu/website",
  "description": "The `arolariu.ro` project consists of a Next.JS web application.",
  "homepage": "https://arolariu.ro",
  "repository": "github:arolariu/arolariu.ro",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "keywords": [
    "NextJS",
    "ReactJS",
    "TailwindCSS"
  ],
  "bugs": {
    "url": "https://github.com/arolariu/arolariu.ro/issues",
    "email": "admin@arolariu.ro"
  },
  "author": {
    "name": "Alexandru-Razvan Olariu",
    "email": "admin@arolariu.ro",
    "url": "https://arolariu.ro"
  },
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build": "npm run build:before && next build && npm run build:after",
    "build:before": "node scripts/beforeBuild.ts",
    "build:after": "node scripts/afterBuild.ts",
    "build:debug": "cross-env NODE_ENV=development NEXT_DEBUG=true next build --debug --debug-prerender --profile --no-mangling",
    "clean": "node scripts/clean.ts",
    "dev": "npm run clean && next dev --inspect --experimental-https",
    "email": "npm run clean && email dev",
    "start": "next start",
    "start:debug": "cross-env NODE_OPTIONS='--inspect' NODE_ENV=development node --enable-source-maps .next/standalone/sites/arolariu.ro/server.js",
    "test": "npm run test:unit && npm run test:e2e && npm run test:storybook",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:storybook": "Echo 'No storybook tests configured yet.'"
  },
  "dependencies": {
    "@arolariu/components": "*",
    "@azure/app-configuration": "*",
    "@azure/identity": "*",
    "@azure/keyvault-secrets": "*",
    "@azure/monitor-opentelemetry-exporter": "*",
    "@azure/storage-blob": "*",
    "@clerk/localizations": "*",
    "@clerk/nextjs": "*",
    "@opentelemetry/api": "*",
