    "@storybook/addon-links": "*",
    "@storybook/addon-onboarding": "*",
    "@storybook/addon-themes": "*",
    "@storybook/blocks": "*",
    "@storybook/nextjs": "*",
    "@storybook/react": "*",
    "@storybook/test": "*",
    "@storybook/test-runner": "*",
    "@tailwindcss/postcss": "*",
    "@tailwindcss/typography": "*",
    "@testing-library/dom": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@types/eslint": "*",
    "@types/eslint-plugin-jsx-a11y": "*",
    "@types/eslint__js": "*",
    "@types/jest": "*",
