  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Collection-level tests: default expectations for most routes (pages + assets)",
          "// Note: request-level tests can tighten/override these defaults.",
          "",
          "// Status code validation: allow redirects (common for auth/protected pages)",
          "pm.test(\"Response status is OK (200-399)\", function () {",
          "    pm.expect(pm.response.code).to.be.within(200, 399,",
          "        `Expected 2xx-3xx status, got ${pm.response.code}`);",
          "});",
          "",
          "// Strict response time check (configurable via collection/environment variable)",
          "pm.test(\"Response time is under configured threshold\", function () {",
          "    var raw = pm.environment.get('maxResponseTimeMs') || pm.collectionVariables.get('maxResponseTimeMs') || '3000';",
          "    var maxMs = Number(raw);",
          "    pm.expect(maxMs).to.be.a('number');",
          "    pm.expect(pm.response.responseTime).to.be.below(maxMs,",
          "        `Response time ${pm.response.responseTime}ms exceeds ${maxMs}ms SLA`);",
          "});",
          "",
          "// Content-Type header validation (covers HTML, JSON, XML, icons, SVG, RSC)",
          "pm.test(\"Response has valid Content-Type header\", function () {",
          "    var contentType = pm.response.headers.get('Content-Type');",
          "    pm.expect(contentType).to.exist;",
          "    pm.expect(contentType).to.match(/^(text\\/html|application\\/json|text\\/plain|application\\/xml|text\\/xml|image\\/x-icon|image\\/vnd\\.microsoft\\.icon|image\\/svg\\+xml|application\\/manifest\\+json|text\\/x-component)(;.*)?$/i,",
          "        `Invalid Content-Type: ${contentType}`);",
          "});",
          "",
          "// Response body exists (skip for 204/304 and HEAD)",
          "pm.test(\"Response body exists (when applicable)\", function () {",
          "    var method = (pm.request && pm.request.method) ? pm.request.method.toUpperCase() : 'GET';",
          "    if (method === 'HEAD' || pm.response.code === 204 || pm.response.code === 304) {",
          "        pm.expect(true).to.equal(true);",
          "        return;",
          "    }",
          "    pm.expect(pm.response.responseSize).to.be.above(0);",
          "});",
          "",
          "// Security headers (strict by default; disable by setting strictSecurityHeaders=false)",
          "pm.test(\"Security headers are present (configurable)\", function () {",
          "    var strict = (pm.environment.get('strictSecurityHeaders') || pm.collectionVariables.get('strictSecurityHeaders') || 'true').toLowerCase();",
          "    if (strict !== 'true') return;",
          "",
          "    pm.expect(pm.response.headers.get('X-Frame-Options')).to.equal('DENY');",
          "    pm.expect(pm.response.headers.get('X-Content-Type-Options')).to.equal('nosniff');",
          "    pm.expect(pm.response.headers.get('Referrer-Policy')).to.exist;",
          "    pm.expect(pm.response.headers.get('Permissions-Policy')).to.exist;",
          "    pm.expect(pm.response.headers.get('Content-Security-Policy')).to.exist;",
          "});",
          "",
          "// Log detailed performance metrics",
          "console.log(`[${pm.info.requestName}] Status: ${pm.response.code} | Time: ${pm.response.responseTime}ms | Size: ${pm.response.responseSize} bytes`);"
        ]
      }
    }
