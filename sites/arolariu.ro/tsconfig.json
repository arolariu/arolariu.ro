{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "allowArbitraryExtensions": true,
    "erasableSyntaxOnly": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom"
    ]
  },
  "exclude": [
    "node_modules",
    ".storybook"
  ],
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
