{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "allowArbitraryExtensions": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom"
    ]
  },
  "exclude": [
    ".storybook/**",
    "**/*.{test,stories}.{ts,tsx}",
    "node_modules"
  ],
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.ts",
    "postcss.config.js"
  ]
}
