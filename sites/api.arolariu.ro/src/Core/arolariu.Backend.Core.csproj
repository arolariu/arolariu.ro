<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>
		<UserSecretsId>8d2be4c1-22f6-41dc-a442-4ff2882d22e2</UserSecretsId>
		<DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
		<DockerfileContext>.</DockerfileContext>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<SignAssembly>False</SignAssembly>
		<EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
		<AnalysisLevel>latest</AnalysisLevel>
	</PropertyGroup>

	<!-- Treat warnings as errors for `DEBUG` deployment. -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<WarningLevel>9999</WarningLevel>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
		<CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
		<NoWarn>S1135</NoWarn>
	<!-- S1135 - SonarLint "Complete TODOs" -->
	</PropertyGroup>

	<!-- Treat warnings as errors for `RELEASE` deployment. -->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<WarningLevel>9999</WarningLevel>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
		<CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
		<NoWarn>S1135</NoWarn>
	<!-- S1135 - SonarLint "Complete TODOs" -->
	</PropertyGroup>
	<ItemGroup>
	  <Compile Remove="Domain\General\Helpers\**" />
	  <Content Remove="Domain\General\Helpers\**" />
	  <EmbeddedResource Remove="Domain\General\Helpers\**" />
	  <None Remove="Domain\General\Helpers\**" />
	</ItemGroup>

	<!-- Health checks packages -->
	<ItemGroup>
		<PackageReference Include="AspNetCore.HealthChecks.AzureKeyVault" Version="8.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.CosmosDb" Version="8.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.SqlServer" Version="8.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.AzureStorage" Version="7.0.0" />
		<PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.1" />
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.Abstractions" Version="8.0.1" />
	</ItemGroup>

	<!-- Azure packages-->
	<ItemGroup>
		<PackageReference Include="Azure.Extensions.AspNetCore.Configuration.Secrets" Version="1.3.0" />
		<PackageReference Include="Azure.Security.KeyVault.Secrets" Version="4.6.0-beta.2" />
		<PackageReference Include="Azure.Storage.Blobs" Version="12.19.1" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Common\arolariu.Backend.Common.csproj" />
	  <ProjectReference Include="..\Core.Auth\arolariu.Backend.Core.Auth.csproj" />
	  <ProjectReference Include="..\Invoices\arolariu.Backend.Domain.Invoices.csproj" />
	</ItemGroup>

</Project>
