<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <ResultsDirectory>TestResults</ResultsDirectory>
    <TargetPlatform>x64</TargetPlatform>
    <!-- Removed invalid TargetFrameworkVersion; test host infers from project -->
    <CollectMetrics>true</CollectMetrics>
  </RunConfiguration>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <Exclude>
            [arolariu.Backend.Domain.Invoices]*
          </Exclude>
          <IncludeTestAssembly>true</IncludeTestAssembly>
          <SingleHit>false</SingleHit>
          <SkipAutoProps>false</SkipAutoProps>
          <UseSourceLink>false</UseSourceLink>
          <DeterministicReport>true</DeterministicReport>
          <Format>cobertura,lcov,opencover,json</Format>
          <ExcludeByAttribute>
            Obsolete
            GeneratedCodeAttribute
            CompilerGeneratedAttribute
            ExcludeFromCodeCoverage
          </ExcludeByAttribute>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
