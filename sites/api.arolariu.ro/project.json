{
  "name": "@arolariu/api",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "sourceRoot": "sites/api.arolariu.ro",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet build arolariu.sln --configuration Release",
        "cwd": "."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet test --configuration Release --logger trx --results-directory ./TestResults --collect:\"XPlat Code Coverage\"",
        "cwd": "sites/api.arolariu.ro"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet run --project src/Core",
        "cwd": "sites/api.arolariu.ro"
      }
    }
  },
  "tags": [
    "scope:api",
    "type:app",
    "platform:dotnet"
  ]
}
