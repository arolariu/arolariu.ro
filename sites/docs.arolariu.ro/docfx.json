{
  "metadata": [
    # Collect metadata for the API documentation from the backend and frontend projects
    {
      "src": [
        {
          "src": "../api.arolariu.ro/",
          "files": [
            "/backend/**/*.csproj",
            "/frontend/**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "shouldSkipMarkup": false,
      "includePrivateMembers": true,
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "noRestore": false,
      "memberLayout": "samePage",
      "namespaceLayout": "nested",
      "allowCompilationErrors": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml",
          "**/*.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appTitle": "arolariu.ro DocFX",
      "_appName": "docs.arolariu.ro",
      "_appFooter": "<strong>Built using <em><a href=\"https://dotnet.github.io/docfx\">DocFX</a></em> and <em><a href=\"https://github.com/Singulink/SingulinkFX\" style='color:red!IMPORTANT'>Singulink</a></em>.</strong>",
      "_copyrightFooter": "Project is backed by an MIT License.",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_disableSideFilter": false,
      "_disableContribution": false,
      "_disableBreadcrumb": false,
      "_gitContribute": {
        "repo": "https://github.com/arolariu/arolariu.ro"
      },
      "_gitUrlPattern": "github"
    },
    "template": [
      "default",
      "templates/singulinkfx"
    ],
    "keepFileLink": false,
    "disableGitFeatures": false,
    "sitemap": {
      "baseUrl": "https://docs.arolariu.ro/",
      "priority": 0.5,
      "changefreq": "daily"
    },
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "tasklists",
        "diagrams"
      ]
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
